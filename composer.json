{
  "name": "api-clients/transport",
  "license": "MIT",
  "authors": [
    {
      "name": "Cees-Jan Kiewiet",
      "email": "ceesjank@gmail.com"
    }
  ],
  "require": {
    "php": "^7.0",
    "api-clients/middleware": "^2.0",
    "api-clients/resource": "^3.0",
    "api-clients/rx": "^2.0",
    "clue/block-react": "^1.1",
    "clue/buzz-react": "^1.1",
    "doctrine/annotations": "^1.2",
    "psr/container": "^1.0",
    "react/http-client": "^0.4.15",
    "react/promise": "^2.4",
    "wyrihaximus/ticking-promise": "^1.6"
  },
  "require-dev": {
    "api-clients/test-utilities": "^3.0.1",
    "php-di/php-di": "^5.4.3"
  },
  "suggest": {
    "api-clients/resource-generator": "Easy wireframing of resources",
    "api-clients/middleware-cache": "Caching middleware",
    "api-clients/middleware-oauth1": "Oauth 1.0 middleware"
  },
  "autoload": {
    "psr-4": {
      "ApiClients\\Foundation\\Transport\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ApiClients\\Tests\\Foundation\\Transport\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true
  },
  "extra": {
    "api-clients": {
      "command-bus": {
        "path": "src/CommandBus",
        "namespace": "ApiClients\\Foundation\\Transport\\CommandBus"
      }
    }
  },
  "scripts": {
    "ensure-installed": "composer install --ansi -n -q",
    "lint-php": [
      "@ensure-installed",
      "parallel-lint --exclude vendor ."
    ],
    "cs": [
      "@ensure-installed",
      "phpcs --standard=PSR2 src/"
    ],
    "unit": [
      "@ensure-installed",
      "phpunit --colors=always -c phpunit.xml.dist"
    ],
    "unit-coverage": [
      "@ensure-installed",
      "phpunit --colors=always -c phpunit.xml.dist --coverage-text --coverage-html covHtml --coverage-clover ./build/logs/clover.xml"
    ],
    "qa-all": [
      "@lint-php",
      "@cs",
      "@unit"
    ],
    "qa-all-coverage": [
      "@lint-php",
      "@cs",
      "@unit-coverage"
    ],
    "qa-windows": [
      "@lint-php",
      "@cs",
      "@unit"
    ],
    "qa-ci": [
      "@qa-all-coverage"
    ],
    "qa-ci-windows": [
      "@qa-windows"
    ],
    "qa-contrib": [
      "@qa-all"
    ],
    "ci-coverage": [
      "if [ -f ./build/logs/clover.xml ]; then wget https://scrutinizer-ci.com/ocular.phar && php ocular.phar code-coverage:upload --format=php-clover ./build/logs/clover.xml; fi"
    ]
  }
}
